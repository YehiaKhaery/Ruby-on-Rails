= form_for(@professor_title) do |f|
  - if @professor_title.errors.any?
    #error_explanation
      %h2
        = pluralize(@professor_title.errors.count, "error")
        prohibited this professor_title from being saved:
      %ul
        - @professor_title.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .actions
    = f.submit
