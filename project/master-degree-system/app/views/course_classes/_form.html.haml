= form_for(@course_class) do |f|
  - if @course_class.errors.any?
    #error_explanation
      %h2
        = pluralize(@course_class.errors.count, "error")
        prohibited this course_class from being saved:
      %ul
        - @course_class.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :courseClassName
    %br/
    = f.text_field :courseClassName
  .field
    = f.label :creator
    %br/
    = f.text_field :creator
  .field
    = f.label :modifier
    %br/
    = f.text_field :modifier
  .actions
    = f.submit
