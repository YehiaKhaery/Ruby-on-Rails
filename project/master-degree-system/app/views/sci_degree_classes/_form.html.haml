= form_for(@sci_degree_class) do |f|
  - if @sci_degree_class.errors.any?
    #error_explanation
      %h2
        = pluralize(@sci_degree_class.errors.count, "error")
        prohibited this sci_degree_class from being saved:
      %ul
        - @sci_degree_class.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
