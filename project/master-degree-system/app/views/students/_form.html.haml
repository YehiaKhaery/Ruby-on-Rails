= form_for(@student) do |f|
  - if @student.errors.any?
    #error_explanation
      %h2
        = pluralize(@student.errors.count, "error")
        prohibited this student from being saved:
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user
    %br/
    = f.text_field :user
  .field
    = f.label :creator
    %br/
    = f.text_field :creator
  .field
    = f.label :modifier
    %br/
    = f.text_field :modifier
  .actions
    = f.submit
