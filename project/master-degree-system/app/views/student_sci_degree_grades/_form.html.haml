= form_for(@student_sci_degree_grade) do |f|
  - if @student_sci_degree_grade.errors.any?
    #error_explanation
      %h2
        = pluralize(@student_sci_degree_grade.errors.count, "error")
        prohibited this student_sci_degree_grade from being saved:
      %ul
        - @student_sci_degree_grade.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :studentSciDegree_id, value: params["student_sci_degree_id"]
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :year
    %br/
    = f.number_field :year
  .field
    = f.label :grade
    %br/
    = f.text_field :grade
  .actions
    = f.submit
