%h1 Listing roles
%table
  %thead
    %tr
      %th Name
      %th Url
      %th Creator
      %th Modifier
      %th
      %th
      %th
  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.url
        %td= role.creator
        %td= role.modifier
        %td= link_to 'Show', role
        %td= link_to 'Edit', edit_role_path(role)
        %td= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Role', new_role_path
