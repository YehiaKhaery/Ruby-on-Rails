%h1 Semesters
%table.table
  %thead
    %tr
      %th Semestername
      %th
      %th
      %th
  %tbody
    - @semesters.each do |semester|
      %tr
        %td= semester.semesterName
        %td= link_to 'Show', semester
        %td= link_to 'Edit', edit_semester_path(semester)
        %td= link_to 'Delete', semester, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Semester', new_semester_path
