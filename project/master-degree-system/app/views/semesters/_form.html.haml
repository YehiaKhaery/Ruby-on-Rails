= form_for(@semester) do |f|
  - if @semester.errors.any?
    #error_explanation
      %h2
        = pluralize(@semester.errors.count, "error")
        prohibited this semester from being saved:
      %ul
        - @semester.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :semesterName
    %br/
    = f.text_field :semesterName
  .field
    = f.label :creator
    %br/
    = f.text_field :creator
  .field
    = f.label :modifier
    %br/
    = f.text_field :modifier
  .actions
    = f.submit
