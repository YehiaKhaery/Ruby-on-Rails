= form_for(@privilege_group) do |f|
  - if @privilege_group.errors.any?
    #error_explanation
      %h2
        = pluralize(@privilege_group.errors.count, "error")
        prohibited this privilege_group from being saved:
      %ul
        - @privilege_group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
