%h1 Listing faculties
%table
  %thead
    %tr
      %th Name
      %th Creator
      %th Modifier
      %th
      %th
      %th
  %tbody
    - @faculties.each do |faculty|
      %tr
        %td= faculty.name
        %td= faculty.creator
        %td= faculty.modifier
        %td= link_to 'Show', faculty
        %td= link_to 'Edit', edit_faculty_path(faculty)
        %td= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' }
