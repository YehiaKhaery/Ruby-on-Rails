= form_for(@faculty) do |f|
  - if @faculty.errors.any?
    #error_explanation
      %h2
        = pluralize(@faculty.errors.count, "error")
        prohibited this faculty from being saved:
      %ul
        - @faculty.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :creator
    %br/
    = f.text_field :creator
  .field
    = f.label :modifier
    %br/
    = f.text_field :modifier
  .actions
    = f.submit
